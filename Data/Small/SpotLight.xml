<?xml version="1.0" encoding="utf-8" ?>
<Scene>
  <Viewpoint>
    <Transform>
      <Translate>0, -6, -14</Translate>
      <RotateX>45</RotateX>
    </Transform>
    <FOV>90</FOV>
  </Viewpoint>

  <Lights>
    <AmbientLight>
        <Colour>0.156</Colour>
    </AmbientLight>

    <SpotLight power="300" width="35" FallOffWidth="10">
      <Transform>
        <LookAt to="0,0,0" from="5,12,5" />
      </Transform>
      <Colour>1,1,0</Colour>
    </SpotLight>

    <SpotLight power="300" width="35" FallOffWidth="10">
      <Transform>
        <LookAt to="0,0,0" from="5,12,-5"/>
      </Transform>
      <Colour>1, 0, 0</Colour>
    </SpotLight>

    <SpotLight power="300" width="35" FallOffWidth="10">
      <Transform>
        <LookAt to="0,0,0" from="-5,12,5" />
      </Transform>
      <Colour>0, 0, 1</Colour>
    </SpotLight>
    <SpotLight power="300" width="35" FallOffWidth="10">
      <Transform>
        <LookAt to="0,0,0" from="-5,12,-5" />
      </Transform>
      <Colour>0, 1, 0</Colour>
    </SpotLight>

  </Lights>

  <RenderSettings>
    <Depth>1</Depth>
    <Shadows>true</Shadows>
    <Reflections>true</Reflections>
    <Refractions>true</Refractions>
  </RenderSettings>

  <Materials>
    <ColourMaterial name="darkgrey">
      <Diffuse>
        <Colour>0.3</Colour>
      </Diffuse>
      <Specular specularity="20" exponent="0.35" />
      <Reflected>
        <Colour>0.9</Colour>
      </Reflected>
      <IOR>1</IOR>
      <Transmitted>
        <Colour>0</Colour>
      </Transmitted>
    </ColourMaterial>

    <ColourMaterial name="lightgrey">
      <Diffuse>
        <Colour>0.7</Colour>
      </Diffuse>
      <Specular>
        <Colour>0.5</Colour>
        <Specularity>20</Specularity>
        <Exponent>0.35</Exponent>
      </Specular>
      <Reflected>
        <Colour>0.9</Colour>
      </Reflected>
      <IOR>1</IOR>
      <Transmitted>
        <Colour>0</Colour>
      </Transmitted>
    </ColourMaterial>

    <ColourMaterial name="red">
      <Diffuse>
        <Colour>
          <Red>0.7</Red>
          <Green>0.1</Green>
          <Blue>0.1</Blue>
        </Colour>
      </Diffuse>
      <Specular exponent="0.35">
        <Specularity>20</Specularity>
      </Specular>
      <Reflected>
        <Colour>0</Colour>
      </Reflected>
      <IOR>1</IOR>
      <Transmitted>
        <Colour>0</Colour>
      </Transmitted>
    </ColourMaterial>

    <CheckMaterial name="check" from-material="lightgrey" to-material="darkgrey">
      <Scale>4</Scale>
    </CheckMaterial>

  </Materials>

  <Primitives>
    <Sphere>
      <Radius>2</Radius>
      <Material>red</Material>
    </Sphere>

    <Plane>
      <Point x="0" y="-6" z="0"></Point>
      <Normal x="0" y="1" z="0"></Normal>
      <Material>check</Material>
    </Plane>

  </Primitives>

</Scene>
