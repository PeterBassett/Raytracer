<?xml version="1.0" encoding="utf-8" ?>
<Config>
  <Renderer>
    <Raytracer />
    
    <RenderSettings>
      <Depth>1</Depth>
      <Shadows>true</Shadows>
      <Reflections>true</Reflections>
      <Refractions>true</Refractions>
    </RenderSettings>
  </Renderer>

  <Camera>
    <Viewpoint>
      <Transform>
        <RotateX>45</RotateX>
        <Translate>0,6,14</Translate>
      </Transform>
      <FOV>90</FOV>
    </Viewpoint>
  </Camera>

  <Scene>

    <Background>
      <SolidColourBackground>
        <Colour>0.5</Colour>
      </SolidColourBackground>
    </Background>
    <!--
  <Viewpoint>
    <Transform>
      <LookAt to="0,0,0" from="0,6,14" up="0,1,0" />
      <LookAt>
        <From>0,1,0</From>
        <To>
          <Point>0,0,0</Point>
        </To>
        <Up>
          <Point x="0" y="1" z="0"></Point>
        </Up>
      </LookAt>
    </Transform>
    <FOV>90</FOV>
  </Viewpoint>
-->
    <Lights>
      <AmbientLight power="5">
        <Colour>0.5</Colour>
      </AmbientLight>
    </Lights>

    <RenderSettings>
      <Depth>1</Depth>
      <Shadows>1</Shadows>
      <Reflections>0</Reflections>
      <Refractions>0</Refractions>
    </RenderSettings>

    <Materials>
      <Include href="Default/DiffuseMaterials.xml" />

      <ColourMaterial name="darkgrey">
        <Diffuse>
          <Colour>0.3</Colour>
        </Diffuse>
        <Specular specularity="20" exponent="0.35" />
        <Reflected>
          <Colour>0.9</Colour>
        </Reflected>
        <IOR>1</IOR>
        <Transmitted>
          <Colour>0</Colour>
        </Transmitted>
      </ColourMaterial>

      <ColourMaterial name="lightgrey">
        <Diffuse>
          <Colour>0.7</Colour>
        </Diffuse>
        <Specular>
          <Colour>0.5</Colour>
          <Specularity>20</Specularity>
          <Exponent>0.35</Exponent>
        </Specular>
        <Reflected>
          <Colour>
            <Red>0.9</Red>
            <Green>0.9</Green>
            <Blue>0.9</Blue>
          </Colour>
        </Reflected>
        <IOR>1</IOR>
        <Transmitted>
          <Colour>0</Colour>
        </Transmitted>
      </ColourMaterial>

      <ColourMaterial name="red">
        <Diffuse>
          <Colour>
            <Red>0.7</Red>
            <Green>0.1</Green>
            <Blue>0.1</Blue>
          </Colour>
        </Diffuse>
        <Specular exponent="0.35">
          <Specularity>20</Specularity>
        </Specular>
        <Reflected>
          <Colour>0</Colour>
        </Reflected>
        <IOR>1</IOR>
        <Transmitted>
          <Colour>0</Colour>
        </Transmitted>
      </ColourMaterial>

      <CheckMaterial name="check" from-material="lightgrey" to-material="darkgrey">
        <Size>4</Size>
      </CheckMaterial>

    </Materials>

    <Primitives>
      <Sphere>
        <Radius>2</Radius>
        <Material>red</Material>
      </Sphere>

      <Sphere>
        <Transform>
          <Translate>3, 3, 10</Translate>
        </Transform>
        <Radius>3</Radius>
        <Material>red</Material>
      </Sphere>

      <Plane>
        <Point x="0" y="-6" z="0"></Point>
        <Normal x="0" y="1" z="0"></Normal>
        <Material>check</Material>
      </Plane>

    </Primitives>

  </Scene>
</Config>