<?xml version="1.0" encoding="utf-8" ?>
<Config>
  <Renderer>
    <Raytracer />

    <RenderSettings>
      <Depth>1</Depth>
      <Shadows>true</Shadows>
      <Reflections>true</Reflections>
      <Refractions>true</Refractions>
    </RenderSettings>
  </Renderer>

  <Camera>
    <Viewpoint>
      <Transform>
        <Translate>0,-2,-14</Translate>
      </Transform>
      <FOV>90</FOV>
    </Viewpoint>
  </Camera>

  <Scene>
    <Background>
      <SolidColourBackground>
        <Colour>0.5</Colour>
      </SolidColourBackground>
    </Background>

    <Lights>
      <DistantLight power="1">
        <Colour>1</Colour>
        <Transform>
          <RotateZ>40</RotateZ>
          <RotateY>-60</RotateY>
        </Transform>
      </DistantLight>
    </Lights>

    <RenderSettings>
      <Depth>1</Depth>
      <Shadows>1</Shadows>
      <Reflections>0</Reflections>
      <Refractions>0</Refractions>
    </RenderSettings>

    <Materials>
      <Include href="Default/DiffuseMaterials.xml" />
    </Materials>

    <Primitives>
      <Include href="Default/Primitives.xml" includeByElement="Sphere" />
      <Include href="Default/Primitives.xml" includeByName="DefaultPlane" />
    </Primitives>

  </Scene>
</Config>