<?xml version="1.0" encoding="utf-8" ?>
<Scene>
  <Viewpoint>
    <Transform>
      <Translate>0,0,-9</Translate>
    </Transform>
    <FOV>90</FOV>
  </Viewpoint>

  <Lights>
    <AmbientLight>
      <Colour>0.156</Colour>
    </AmbientLight>

    <PointLight power="300">
      <Transform>
        <Translate>10,10,-10</Translate>
      </Transform>
      <Colour>1</Colour>
    </PointLight>
    
  </Lights>

  <RenderSettings>
    <Depth>1</Depth>
    <Shadows>true</Shadows>
    <Reflections>false</Reflections>
    <Refractions>false</Refractions>
  </RenderSettings>

  <Materials>
    <ColourMaterial name="darkgrey">
      <Diffuse>
        <Colour>0.3</Colour>
      </Diffuse>
      <Reflected>
        <Colour>0.9</Colour>
      </Reflected>
    </ColourMaterial>

    <ColourMaterial name="lightgrey">
      <Diffuse>
        <Colour>0.7</Colour>
      </Diffuse>
      <Reflected>
        <Colour>0.9</Colour>
      </Reflected>
    </ColourMaterial>

    <ColourMaterial name="red">
      <Diffuse>
        <Colour>
          <Red>0.7</Red>
          <Green>0.1</Green>
          <Blue>0.1</Blue>
        </Colour>
      </Diffuse>
    </ColourMaterial>

    <CheckMaterial name="check" from-material="lightgrey" to-material="darkgrey">
      <Scale>4</Scale>
    </CheckMaterial>

    <TextureMaterial name="texture">
      <Texture>earth_daymap.jpg</Texture>
    </TextureMaterial>
    
  </Materials>

  <Primitives>
    <Sphere>
      
      <Radius>5</Radius>
      <Material>texture</Material>
    </Sphere>

    <Plane>
      <Point x="0" y="-6" z="0"></Point>
      <Normal x="0" y="1" z="0"></Normal>
      <Material>check</Material>
    </Plane>

  </Primitives>

</Scene>