<?xml version="1.0" encoding="utf-8" ?>
<Config>
  <Renderer>
    <Raytracer />

    <RenderSettings>
      <Depth>1</Depth>
      <Shadows>true</Shadows>
      <Reflections>false</Reflections>
      <Refractions>false</Refractions>
    </RenderSettings>
  </Renderer>

  <Camera>
    <Viewpoint>
      <Transform>
        <Rotate>36, -21.5, 0.0</Rotate>
        <Translate>8.5,9, -16</Translate>
      </Transform>
      <FOV>70</FOV>
    </Viewpoint>

  </Camera>

  <Scene>

    <Lights>
      <AmbientLight>
        <Colour>0.2</Colour>
      </AmbientLight>

      <PointLight power="300">
        <Transform>
          <Translate>6,8,-10</Translate>
        </Transform>
        <Colour>1</Colour>
      </PointLight>

      <PointLight power="300">
        <Transform>
          <Translate>6,8,10</Translate>
        </Transform>
        <Colour>1</Colour>
      </PointLight>

    </Lights>


    <Materials>
      <ColourMaterial name="darkgrey">
        <Diffuse>
          <Colour>0.3</Colour>
        </Diffuse>
        <Reflected>
          <Colour>0.9</Colour>
        </Reflected>
      </ColourMaterial>

      <ColourMaterial name="lightgrey">
        <Diffuse>
          <Colour>0.7</Colour>
        </Diffuse>
        <Reflected>
          <Colour>0.9</Colour>
        </Reflected>
      </ColourMaterial>

      <ColourMaterial name="red">
        <Diffuse>
          <Colour>
            <Red>1</Red>
            <Green>0</Green>
            <Blue>0</Blue>
          </Colour>
        </Diffuse>
      </ColourMaterial>

      <ColourMaterial name="green">
        <Diffuse>
          <Colour>
            <Red>0</Red>
            <Green>1</Green>
            <Blue>0</Blue>
          </Colour>
        </Diffuse>
      </ColourMaterial>

      <ColourMaterial name="blue">
        <Diffuse>
          <Colour>
            <Red>0</Red>
            <Green>0</Green>
            <Blue>1</Blue>
          </Colour>
        </Diffuse>
      </ColourMaterial>

      <CheckMaterial name="check" from-material="lightgrey" to-material="darkgrey">
        <Size>4</Size>
      </CheckMaterial>

      <TextureMaterial name="texture">
        <Texture>earth_daymap.jpg</Texture>
      </TextureMaterial>

    </Materials>

    <Primitives>
      <Torus innerradius="5" outerradius="1.2">
        <Transform>
          <RotateX>-30</RotateX>
        </Transform>
        <Material>red</Material>
      </Torus>

      <Torus innerradius="5" outerradius="1.2">
        <Transform>
          <RotateX>60</RotateX>
          <Translate>-7,0,0</Translate>
        </Transform>
        <Material>green</Material>
      </Torus>

      <Torus innerradius="5" outerradius="1.2">
        <Transform>
          <RotateX>60</RotateX>
          <Translate>7,0,0</Translate>
        </Transform>
        <Material>blue</Material>
      </Torus>

      <Plane>
        <Point x="0" y="-6" z="0"></Point>
        <Normal x="0" y="1" z="0"></Normal>
        <Material>check</Material>
      </Plane>

    </Primitives>

  </Scene>
</Config>